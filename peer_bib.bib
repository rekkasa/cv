@article{rekkas2020predictive,
	year         = 2020,
	author       = {Rekkas,  Alexandros and Paulus,  Jessica K. and Raman,  Gowri and Wong,  John B. and Steyerberg,  Ewout W. and Rijnbeek,  Peter R. and Kent,  David M. and van Klaveren,  David},
	title        = {Predictive approaches to heterogeneous treatment effects: a scoping review},
	volume       = 20,
	issn         = {1471-2288},
	url          = {http://dx.doi.org/10.1186/s12874-020-01145-1},
	doi          = {10.1186/s12874-020-01145-1},
	number       = 1,
	journal      = {BMC Medical Research Methodology},
	publisher    = {Springer Science and Business Media LLC},
	month        = oct,
  note = {\\\
  Η παρούσα μελέτη αποτελεί μια διερευνητική ανασκόπηση
                  των μεθόδων παλινδρόμησης για την ανάλυση της Ετερογένειας των
                  Θεραπευτικών Αποτελεσμάτων (HTE) σε τυχαιοποιημένες κλινικές
                  δοκιμές (RCTs). Καθώς οι RCTs αποδίδουν μέσους όρους, η
                  ιατρική ακριβείας απαιτεί μεθόδους που προβλέπουν ποιοι
                  συγκεκριμένοι ασθενείς ωφελούνται περισσότερο. \\\par
  Αναλύοντας 36 μεθοδολογικά άρθρα, ταξινομήσαμε τις προσεγγίσεις σε τρεις
                  κατηγορίες:
  \\\
  - Μέθοδοι βασισμένες στον κίνδυνο (Risk-based): Χρησιμοποιούν μόνο
                  προγνωστικούς παράγοντες για τον υπολογισμό του βασικού
                  κινδύνου, βασιζόμενες στη μαθηματική εξάρτηση του απόλυτου
                  οφέλους από τον κίνδυνο νόσησης.
  \\\
  - Μοντελοποίηση θεραπευτικού αποτελέσματος (Effect modeling): Ενσωματώνουν αλληλεπιδράσεις θεραπείας-ασθενούς (effect modifiers) για την ακριβή πρόβλεψη του εξατομικευμένου οφέλους, συχνά με τεχνικές ποινικοποίησης για αποφυγή υπερπροσαρμογής.
  \\\
  - Βέλτιστα θεραπευτικά μοντέλα (Optimal Treatment Regimes): Εστιάζουν στη δημιουργία αλγοριθμικών κανόνων για την ταξινόμηση των ασθενών σε αυτούς που πρέπει ή δεν πρέπει να λάβουν θεραπεία.
\\\
\ \ \ \ Το βασικό συμπέρασμα είναι ότι, παρά την πληθώρα διαθέσιμων μεθόδων, απουσιάζουν επαρκείς συγκριτικές μελέτες και κατευθυντήριες γραμμές. Οι συγγραφείς τονίζουν την ανάγκη για περαιτέρω έρευνα ώστε να καθοριστεί ποια προσέγγιση είναι βέλτιστη ανάλογα με τα χαρακτηριστικά των δεδομένων κάθε κλινικής δοκιμής.
}
}
@article{verver2020eortc,
	year         = 2020,
	author       = {Verver,  Daniëlle and Rekkas,  Alexandros and Garbe,  Claus and van Klaveren,  David and van Akkooi,  Alexander C.J. and Rutkowski,  Piotr and Powell,  Barry W.E.M. and Robert,  Caroline and Testori,  Alessandro and van Leeuwen,  Barbara L. and van der Veldt,  Astrid A.M. and Keilholz,  Ulrich and Stadler,  Rudolf and Eggermont,  Alexander M.M. and Verhoef,  Cornelis and Leiter,  Ulrike and Gr\"{u}nhagen,  Dirk J.},
	title        = {The EORTC-DeCOG nomogram adequately predicts outcomes of patients with sentinel node–positive melanoma without the need for completion lymph node dissection},
	volume       = 134,
	issn         = {0959-8049},
	url          = {http://dx.doi.org/10.1016/j.ejca.2020.04.022},
	doi          = {10.1016/j.ejca.2020.04.022},
	journal      = {European Journal of Cancer},
	publisher    = {Elsevier BV},
	month        = jul,
	pages        = {9–18},
  note         = {\\\
 Στην παρούσα μελέτη, στόχος μας ήταν να αναπτύξουμε και να επικυρώσουμε προγνωστικά μοντέλα για την υποτροπή, τις απομακρυσμένες μεταστάσεις και τη θνησιμότητα σε ασθενείς με μελάνωμα και θετικό λεμφαδένα φρουρό. Δεδομένου ότι ο συμπληρωματικός λεμφαδενικός καθαρισμός (CLND) δεν αποτελεί πλέον πρακτική ρουτίνας, επιδιώξαμε να δημιουργήσουμε ένα εργαλείο που να παρέχει ακριβείς εξατομικευμένες προβλέψεις χωρίς να απαιτεί την πραγματοποίηση αυτής της επέμβασης.
\\\
 \ \ \ \ Για την ανάπτυξη των μοντέλων μας, χρησιμοποιήσαμε δεδομένα 1.080 ασθενών από εννέα κέντρα του EORTC, ενώ η εξωτερική επικύρωση πραγματοποιήθηκε σε μια προοπτική κοόρτη 705 ασθενών από τη γερμανική μελέτη DeCOG-SLT. Ως σημαντικούς προγνωστικούς παράγοντες εντοπίσαμε και ενσωματώσαμε την εξέλκωση, την ηλικία, το φορτίο όγκου στον λεμφαδένα φρουρό και το πάχος κατά Breslow.
\\\
\ \ \ \ Τα αποτελέσματά μας κατέδειξαν ότι το νομόγραμμα EORTC-DeCOG προβλέπει επαρκώς την έκβαση των ασθενών (με δείκτη c-index έως 0.74 στην εξωτερική επικύρωση) και μπορεί να εντοπίσει με ασφάλεια ασθενείς χαμηλού κινδύνου. Διαπιστώσαμε, επίσης, ότι η προσθήκη πληροφοριών από τον CLND βελτίωνε οριακά μόνο την απόδοση του μοντέλου. Συνεπώς, καταλήξαμε ότι το νομόγραμμά μας αποτελεί ένα αξιόπιστο εργαλείο που μπορεί να βοηθήσει στη λήψη αποφάσεων για τη χορήγηση επικουρικής θεραπείας, αποφεύγοντας την ανάγκη για περαιτέρω χειρουργική επέμβαση.
  }
}
